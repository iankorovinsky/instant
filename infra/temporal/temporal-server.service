[Unit]
Description=Temporal Server
After=network.target

[Service]
Type=simple
ExecStart=/home/ian/.temporalio/bin/temporal server start-dev
Restart=always
RestartSec=5
User=ian
Group=ian

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=temporal-server

[Install]
WantedBy=multi-user.target

